<div class="page-header">
  <h1>Apps</h1>
  <%= link_to 'New App', new_app_path, class: "btn btn-primary btn-top" %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Platform</th>
      <th>Total devices</th>
      <th>Active devices</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.id %></td>
        <td><%= app.name %></td>
        <td><%= app.platform %></td>
        <td><%= app.devices_count %></td>
        <td><%= app.devices_count - app.inactive_devices_count %></td>
        <td>
          <%= link_to 'Show', app_path(app), class: "btn btn-default btn-xs" %>
          <%= link_to 'Edit', edit_app_path(app), class: "btn btn-primary btn-xs" %>
          <%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-xs" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
